# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index


# Bowls
POST    /service/bowls                                  BowlsController.create
GET     /service/bowls/all                              BowlsController.list
GET     /service/bowls/{id}                             BowlsController.read
PUT     /service/bowls/{id}                             BowlsController.update
DELETE  /service/bowls/{id}                             BowlsController.delete
PUT     /service/bowls/{id}/participants/{pId}          BowlsController.addParticipant
DELETE  /service/bowls/{id}/participants/{pId}          BowlsController.deleteParticipant


# Expenses
POST    /service/expenses/{id}                          ExpensesController.create
DELETE  /service/expenses/{id}                          ExpensesController.delete
PUT     /service/expenses/{id}                          ExpensesController.update
PUT     /service/expenses/{id}/participants/{pId}       ExpensesController.addParticipant
DELETE  /service/expenses/{id}/participants/{pId}       ExpensesController.deleteParticipant


# Participants
POST    /service/participants                           ParticipantsController.create
GET     /service/participants/all                       ParticipantsController.list
GET     /service/participants/{id}                      ParticipantsController.read
PUT     /service/participants/{id}                      ParticipantsController.update
DELETE  /service/participants/{id}                      ParticipantsController.delete


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
# *       /{controller}/{action}                  {controller}.{action}
