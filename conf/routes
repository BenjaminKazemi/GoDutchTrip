# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                Application.index
GET     /app                                             Application.app

GET     /app/bowls/new                                   gui.BowlsGuiController.create
GET     /app/bowls/list                                  gui.BowlsGuiController.list
GET     /app/bowls/{id}                                  gui.BowlsGuiController.show
GET     /app/bowls/{id}/participants                     gui.BowlsGuiController.participants
GET     /app/bowls/{id}/expenses                         gui.BowlsGuiController.expenses
GET     /app/bowls/expenses/{id}                         gui.BowlsGuiController.expense

GET     /app/participants/new                            gui.ParticipantsGuiController.create
GET     /app/participants/list                           gui.ParticipantsGuiController.list
GET     /app/participants/{id}                           gui.ParticipantsGuiController.show


# Bowls
POST    /services/bowls                                  services.BowlsController.create
GET     /services/bowls/all                              services.BowlsController.list
GET     /services/bowls/{id}                             services.BowlsController.read
PUT     /services/bowls/{id}                             services.BowlsController.update
DELETE  /services/bowls/{id}                             services.BowlsController.delete
PUT     /services/bowls/{id}/participants/{pId}          services.BowlsController.addParticipant
DELETE  /services/bowls/{id}/participants/{pId}          services.BowlsController.deleteParticipant


# Expenses
POST    /services/expenses/{id}                          services.ExpensesController.create
DELETE  /services/expenses/{id}                          services.ExpensesController.delete
PUT     /services/expenses/{id}                          services.ExpensesController.update
PUT     /services/expenses/{id}/participants/{pId}       services.ExpensesController.addParticipant
DELETE  /services/expenses/{id}/participants/{pId}       services.ExpensesController.deleteParticipant


# Participants
POST    /services/participants                           services.ParticipantsController.create
GET     /services/participants/all                       services.ParticipantsController.list
GET     /services/participants/{id}                      services.ParticipantsController.read
PUT     /services/participants/{id}                      services.ParticipantsController.update
DELETE  /services/participants/{id}                      services.ParticipantsController.delete


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
# *       /{controller}/{action}                  {controller}.{action}
