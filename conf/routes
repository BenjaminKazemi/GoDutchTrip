# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index


# Bowls
POST    /bowls                                  BowlsController.create
GET     /bowls/all                              BowlsController.list
GET     /bowls/{id}                             BowlsController.read
PUT     /bowls/{id}                             BowlsController.update
DELETE  /bowls/{id}                             BowlsController.delete
POST    /bowls/{id}/expenses                    BowlsController.addExpense
PUT     /bowls/{id}/participants/{pId}          BowlsController.addParticipant
DELETE  /bowls/{id}/participants/{pId}          BowlsController.deleteParticipant


# Expenses
DELETE  /expenses/{id}                          ExpensesController.delete
PUT     /expenses/{id}                          ExpensesController.update
PUT     /expenses/{id}/participants/{pId}       ExpensesController.addParticipant
DELETE  /expenses/{id}/participants/{pId}       ExpensesController.deleteParticipant


# Participants
POST    /participants                           ParticipantsController.create
GET     /participants/all                       ParticipantsController.list
GET     /participants/{id}                      ParticipantsController.read
PUT     /participants/{id}                      ParticipantsController.update
DELETE  /participants/{id}                      ParticipantsController.delete


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
# *       /{controller}/{action}                  {controller}.{action}
